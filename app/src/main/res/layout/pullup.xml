<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/preview_display_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/no_camera_access_view"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:text="@string/no_camera_access" />

        <SurfaceView
            android:id="@+id/sv_test"
            android:layout_width="0dp"
            android:layout_height="0dp" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rLayoutShow_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_finish_p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束检测"
            android:layout_below="@+id/action_text_p3"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="132dp" />

        <TextView
            android:id="@+id/count_text_p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前计数："
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/count_result_p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/count_text_p3"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/action_text_p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动作建议："
            android:layout_below="@+id/count_text_p3"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/action_advice_p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/action_text_p3"
            android:layout_below="@+id/count_text_p3"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            android:visibility="visible" />
    </RelativeLayout>

